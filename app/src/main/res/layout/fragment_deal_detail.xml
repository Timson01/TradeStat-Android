<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.deal_detail.DealDetailFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shadow_box_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/ticker_title"
            style="@style/DealDetailTickerText"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:text="UTC"
            android:textColor="@color/blue" />

        <TextView
            android:id="@+id/ticker_date"
            style="@style/DealDetailDateText"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="14dp"
            android:text="13.06.2021"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/amount_of_trade"
            style="@style/DescriptionText"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:layout_marginRight="20dp"
            android:text="+ 47.99"
            android:textColor="@color/green" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        style="@style/ViewDealDetailStyle"
        android:src="@drawable/ic_no_data_image"
        android:scaleType="centerCrop"
        android:background="@drawable/shadow_box_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/ViewDealDetailStyle"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            style="@style/DealDetailDescSectionTitle"
            android:text="@string/description"
            android:textColor="@color/black" />

        <TextView
            style="@style/TextComments"
            android:layout_marginTop="10dp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                style="@style/DealDetailDescSectionTitle"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="@string/number_of_stocks"
                android:textColor="@color/black" />

            <TextView
                style="@style/TextComments"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="300"
                android:textColor="@color/black" />

        </RelativeLayout>

        <TextView
            style="@style/DealDetailDescSectionTitle"
            android:layout_marginTop="10dp"
            android:text="@string/hashtag"
            android:textColor="@color/black" />

        <TextView
            style="@style/TextComments"
            android:layout_marginTop="10dp"
            android:text="Lorem ipsum dolor sit"
            android:textColor="@color/black" />

    </LinearLayout>

    <RelativeLayout
        style="@style/ViewDealDetailStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="14dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/btnDetailBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_blue_icon"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:id="@+id/btnEditDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_blue_icon"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>